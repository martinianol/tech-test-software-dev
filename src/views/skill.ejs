<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs')%>
  <head>
    <link rel="stylesheet" href="/css/styles-skill.css" />
  </head>

  <body>
    <%- include('./partials/header.ejs')%>
    <main>
      <div class='back-button'>
        <a href="javascript:history.back()"><i class="fas fa-chevron-left"></i></a>
      </div>

      <h1><%=locals.strength.name%></h1>
      <section class="strength-info">
          <p>Proficiency: <strong><%= locals.strength.proficiency%></strong></p>
          <p>Recomendations: <strong><%= locals.strength.recommendations%></strong></p>
      </section>

      <section class="experiences">
        <h2><%=locals.user.person.name.split(" ")[0]%>'s experiences</h2>
        <%locals.user.experiences.forEach(experience => { %>
          <h3><%=experience.name%></h3>
          <p><%=experience.organizations[0].name%>
          <p>From <%=`${experience.fromMonth} ${experience.fromYear}`%>
            <% if(typeof experience.toMonth !=='undefined') {%>
              <%=`to ${experience.toMonth} ${experience.toYear}`%>
            <%}%>
         </p>
        <%})%>
      </section>


    </main>
   
    
    
  </body>
</html>
